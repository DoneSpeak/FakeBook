                <%- include("components/single_post.ejs",{user:user,post:posts[i]}) %>
              <% } %>
              </div>
							<div class="see-more-post">加载更多···</div>
            </div>
            <!-- 推荐栏目 -->
            <div class="col-xs-4 sidebar sidebar-right">
              <%- include("components/sidebar_right.ejs") %>
            </div><!-- 右侧边栏 end -->
          </div>
        </div>
      </div>
    </div>
	</div>
<%- include("components/footer") %>
