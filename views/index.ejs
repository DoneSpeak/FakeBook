<%- include('components/header',{user:user}) %>
	<div class="main">
    <div class="container">

      <div class="row">
        <%- include("components/sidebar_left",{user:user, friend_requests:friend_requests}) %>
        <div class="col-xs-10">
          <div class="row">
            <!-- 消息主体 -->
            <div class="col-xs-8 show-area">
              <div class="modal-all"></div>
              <%- include("components/post_editor",{user:user}) %>
