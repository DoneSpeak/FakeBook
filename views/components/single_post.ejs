<div class="single-post" data-post-pid="<%= post.post_id %>" data-poster-uid="<%= post.user_id %>">
  <div class="post-main">
    <div class="post-head">
      <div class="post-info pull-left">
        <a class="post-user" tabindex="0"  data-toggle="popover" data-trigger="focus"  role="button" data-placement='top' data-content="<button class='btn-add-friend'>加好友</button>"  data-html="true" ><img src="<%= post.avatar %>" class="pull-left img-poster img-big"></a>
        <a href="#"><span class="poster"><%= post.name %></span></a>
        <a class='post-link' href='./post.html'><time data-datetime="2016年12月18日 12:00" data-timestamp="<%= post.post_date %>" ><%= new Date(post.post_date) %></time></a>
      </div>

      <div class="dropdown pull-right dropdown-post-operator">
        <span class="glyphicon glyphicon-chevron-down dropdown-toggle post-edit-delete" id="operate-posted" data-toggle="dropdown"></span>
        <ul class="dropdown-menu operate-menu" role="menu" aria-labelledby="operate-posted">
          <li class="post-edit" role="presentation"><a role="menuitem" tabindex="-1" href="javascript:void(0)">编辑</a></li>
          <li class="post-delete" role="presentation"><a role="menuitem" tabindex="-1" href="javascript:void(0)">删除</a></li>
        </ul>
      </div>
    </div>
    <div class="clear"></div>
    <% if(post.content.length > 300){ %>
      <% var content_show = post.content.substring(0,300); var content_hide = post.content.substring(300,post.content.length);%>
      <p class="post-content content"><%= content_show %><a href="javascript:void(0)" class="see-more-link" data-more-content="<%= content_hide %>">...展开</a></p>
    <% }else{ %>
      <p class="post-content content"><%= post.content %></p>
    <% } %>
    <% if(post.picture) { %>
    <div class="post-img">
      <a href="<%= post.picture %>" class="lightbox_image js-lightbox fs-lightbox-element" data-lightbox-gallery="gallery_fixed" data-lightbox-options='{"fixed":false}' data-title="<a class='poster' href='#'>Mark Zuckerberg</a> <a class='post-link' href='./post.html'><time  data-datetime='2016年12月18日 12:00' data-timestamp='<%= post.post_date %>' >15小时</time></a><br/>amet, consectetur adipiscing elit." title="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.">
        <img src="<%= post.picture %>">
      </a>
    </div>
    <% } %>
    <div class="post-operation">
      <a  class="post-operation-like" href="javascript:void(0)"><span class="glyphicon glyphicon-thumbs-up"></span> 赞 </a>
      <a class="post-comment" href="javascript:void(0)"><span class="glyphicon glyphicon-comment"></span> 评论</a>
      <a href="javascript:void(0)" class="post-operation-share"><span class="glyphicon glyphicon-share"></span> 分享</a>
      <span class="pull-right"><a href="javascript:void(0)"><%= post.num_of_comment %>条评论</a> <a href="javascript:void(0)">0次分享</a></span>
    </div>
  </div>
<!-- 下方为所有评论 -->
  <div class="clear"></div>
  <div class="all-comments">
    <!-- 评论 -->
    <div class="comment-input">
      <img class="pull-left img-mid" src="<%= user.avatar %>" />
      <div class="comment-editor-div">
        <textarea class="comment-editor" placeholder="写评论..."></textarea>
      </div>
    </div>
    <!-- 添加评论的锚点 -->
    <div class="clear comments-anchor"></div>
  </div>   <!-- end of all-comments div -->
</div>  <!-- end of single-post  -->
