<!-- 编辑器 -->
<div class="editor">
  <div class="post-input-area">
    <div class="img-add">
      <label for="img-upload" class="img-upload-label">
        <img class="img-small" src="./img/friends.png"><span class="photo-text">照片/图片</span>
      </label>
    </div>
    <div>
      <div class="input-panel">
        <div class="img-editor-me"><img class="img-big" src="<%= user.avatar %>"></div>
        <!-- <div class="textarea post-input middle-font" id="editor-content" contenteditable="plaintext-only"></div> -->
        <div class="post-input middle-font">
          <textarea id="editor-content" placeholder="分享新鲜事"></textarea>
        </div>
      </div>
      <div class="clear"></div>
      <div class="img-panel">
        <div class="imgupload">
          <!-- 编辑框错误提示模态框 -->
          <div class="modal fade" id="editor-alert" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <h3 class="modal-title">提示</h3>
                </div>
                <div class="modal-body">

                </div>
              </div>
            </div>
          </div>
          <div class="file-tab">
            <div class="img-btn-area">
              <button type="button" class="btn btn-default btn-file">
                  <span>更换</span>
                  <input id="img-upload" type="file" name="file-input" accept="image/gif, image/jpeg, image/jpg, image/png">
              </button>
              <button type="button" class="btn btn-default btn-remove-img">移除</button>
            </div>
          </div>

          <div class="discrip-img">
            <textarea class="discrip-img-input" placeholder="简单说说这照片/图片"></textarea>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <div class="btn-area">
    <button class="btn btn-submit pull-right submit">发布</button>
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-default dropdown-toggle whoview" data-toggle="dropdown">
        <a href="javascript:void(0)"  class='visibility-item'><span class="glyphicon glyphicon-globe" data-visibility="public"></span> 公开 </a><span class="caret">
      </button>
      <ul class="dropdown-menu" role="menu">
        <li role="presentation" class="dropdown-header">谁可以看见</a></li>
        <li><a href="javascript:void(0)" class='visibility-item'><span class="glyphicon glyphicon-user"  data-visibility="friend"></span> 好友 </a></li>
        <li><a href="javascript:void(0)"  class='visibility-item'><span class="glyphicon glyphicon-lock"  data-visibility="private"></span> 自己 </a></li>
        <li class="divider"></li>
      </ul>
    </div>
  </div>
</div><!-- 编辑器 end -->
